void bitonic_sort(int *array, size_t size)
{
	size_t size_init = size;
	int *array_init = array;
	int *flag;
	int aux = {0};

	flag = &aux;
	if (array)
	{
		bitonic_deep_up(array_init, array, size_init, size, flag);
	}
}
